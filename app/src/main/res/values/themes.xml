<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Potaful" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/forest_green_medium</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/forest_green_pale</item>
        <item name="colorOnPrimaryContainer">@color/forest_green_darkest</item>

        <item name="colorSecondary">@color/forest_brown_medium</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/forest_tan</item>
        <item name="colorOnSecondaryContainer">@color/forest_brown_darkest</item>

        <item name="android:colorBackground">@color/forest_beige</item>
        <item name="colorOnBackground">@color/forest_brown_darkest</item>

        <item name="colorSurface">@color/forest_beige</item>
        <item name="colorOnSurface">@color/forest_brown_darkest</item>

        <item name="colorSurfaceVariant">@color/forest_green_light</item>
        <item name="colorOnSurfaceVariant">@color/forest_green_darkest</item>

        <item name="colorOutline">@color/forest_green_dark</item>

        <item name="android:statusBarColor">@color/forest_beige</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Potaful" parent="Base.Theme.Potaful" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Potaful</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>